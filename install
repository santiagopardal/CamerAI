mkdir Images
git submodule init
git submodule update

if [ ! -f ./docker/merge-videos-cron-task ]; then
    echo "0 3 * * * /usr/bin/python /app/merge.py" >> ./docker/merge-videos-cron-task
fi

if [ ! -f ./.env ]; then
    echo API_URL="http://camerapi:8080/api" >> ./.env
    echo ABSOLUTE_PATH="$(pwd)" >> ./.env
fi

cd CamerAPI
./install